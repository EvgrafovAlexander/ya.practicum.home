@startuml
class User {
  +String name
  +String email
  +List<House> houses
  +void register()
  +void login()
}

class House {
  +UUID id
  +String address
  +UUID owner_id
  +List<Device> devices
}

class Device {
  +UUID id
  +UUID group_id
  +UUID house_id
  +Str serial_number
  +Bool status
  +void turn_on()
  +void turn_off()
  +void get_data()
  +void set_temperature()
}

class DeviceType {
  +UUID id
  +Str description
}

class Telemetry {
  +UUID id
  +UUID device_id
  +Float value
  +datetime timestamp
}


User "1" -- "0..*" House : has
House "1" -- "0..*" Device : includes
Device "1" -- "1" DeviceType : has
Device "1" -- "0..*" Telemetry : generates

@enduml